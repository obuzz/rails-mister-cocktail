<div class="background" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path 'background.jpg', crop: :fill %>')">
<h1>New Doses</h1>


<div class="container">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">

    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :description %>
        <%= f.input :ingredient_id, collection: @ingredients %>
      </div>

      <div class="col-xs-6 col-xs-offset-3 center-block">
          <%= f.button :submit, class: "btn create-button"%>
          <%= link_to "Back", cocktails_path, class: "btn create-button" %>
      </div>

    <% end %>

  </div>
</div>



</div>

