
<div id="navbar">
  <%= image_tag "cocktail.svg", alt: "Cocktail", width: 100 %>
  </div>
    <div class="div-with-image>
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <h1>Cocktails List</h1>
          <table>
            <thead>
              <tr>
                <th>Mixology Masters</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @cocktails.each do |cocktail| %>
                <tr>
                  <td><%= cocktail.name %></td>
                  <td><%= link_to 'Show', cocktail %></td>
                  <td><%= link_to 'Edit', edit_cocktail_path(cocktail) %></td>
                  <td><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
          </div>
        </tbody>
      </table>
    <%= link_to "Create Cocktail", new_cocktail_path %>
  </div>
</div>



